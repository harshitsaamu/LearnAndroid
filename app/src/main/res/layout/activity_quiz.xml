<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hgc.learnandroid.QuizActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="This will display the question here ok is it fine for you?"
                android:textColor="@color/colorSecondaryText"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idradiogroup">

                <RadioButton
                    android:id="@+id/idoption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:checked="false"
                    android:text="option 1"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/idoption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:checked="false"
                    android:text="option 2"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/idoption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:checked="false"
                    android:text="option 3"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/idoption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:checked="false"
                    android:text="option 4"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="20dp" />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/idoption5"/>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/but_next"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:id="@+id/idbnext"
                android:text="NEXT"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
